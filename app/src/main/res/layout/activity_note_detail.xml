<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF99"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androbro.mypowernotes.NoteDetailActivity">

    <TextView
        android:id="@+id/editHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        android:text="Edit note"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/titleEditText"
        android:backgroundTint="#FFFFCC"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editHint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#ffffff" />

    <EditText
        android:backgroundTint="#FFFFCC"
        android:id="@+id/noteEditText"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_below="@+id/titleEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="start"/>

    <TextView
        android:id="@+id/detailsDateText"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        android:layout_below="@id/noteEditText"
        android:text="Date here..."
        android:textSize="11sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:visibility="invisible"
        android:layout_marginTop="30dp"
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noteEditText"
        android:layout_centerHorizontal="true"
        android:text="Save" />

</RelativeLayout>
